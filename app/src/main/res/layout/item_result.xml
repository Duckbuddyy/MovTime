<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="movie"
            type="com.duckbuddyy.movtime.model.popular.Result" />

        <variable
            name="isFavourite"
            type="Boolean" />

        <variable
            name="resultItemClick"
            type="com.duckbuddyy.movtime.util.ResultItemClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{(view) ->  resultItemClick.onResultItemClicked(view,movie)}">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="@{movie.name}"
                android:src="@color/black"
                app:imageSrc="@{movie.poster_path}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{movie.name}"
                android:textSize="21sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{isFavourite ? @string/app_name : @string/app_name2}"
                android:textSize="21sp" />


            <Button
                android:id="@+id/fav_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="@{(view) ->  resultItemClick.onResultItemClicked(view,movie)}" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>
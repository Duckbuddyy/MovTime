<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="recycler_view_adapter"
            type="com.duckbuddyy.movtime.util.ResultAdapter" />

        <variable
            name="viewmodel"
            type="com.duckbuddyy.movtime.viewmodel.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg_gradient">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:setAdapter="@{recycler_view_adapter}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
